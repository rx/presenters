<label id="<%=comp.id%>"
       class="mdl-switch mdl-js-switch mdl-js-ripple-effect v-switch v-input"
       for="<%=comp.id%>-input" >
  <input id="<%= comp.id %>-input"
         name="<%= comp.name %>"
         type="checkbox"
         class="mdl-switch__input"
         <%if comp.checked%> checked<%end%><%if comp.disabled%> disabled<%end%>
         <%= erb :"components/event", :locals => {events: comp.events, parent_id: comp.event_parent_id}%>/>
  <span id=<%=comp.id%>-label
            class="mdl-switch__label"><%=comp.text%></span>
</label>
<%= erb :"components/tooltip", :locals => {comp: comp.tooltip, parent_id: comp.id} %>
