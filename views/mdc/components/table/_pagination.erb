<div class="v-paging">
  <span class="v-paging__per-page">
    <span class="v-paging__per-page-label">Rows per page: </span>
    <span class="v-paging__per-page-value"><%= partial "components/select", :locals => {:comp=> comp.per_page} %></span>
  </span>
  <span class="v-paging__count">
    <%= comp.range&.join(' - ') %> of <%= comp.total %>
  </span>
  <%= partial 'components/button', locals: { comp: comp.previous_button, class_name: 'v-actionable v-button--pagination v-button--pagination--previous v-paging__prev' } %>
  <%= partial 'components/button', locals: { comp: comp.next_button, class_name: 'v-actionable v-button--pagination v-button--pagination--next v-paging__next' } %>
</div>
