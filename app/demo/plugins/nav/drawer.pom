Coprl::Presenters.define(:plugin_drawer, namespace: :plugins) do
  helpers Coprl::Presenters::Helpers::Inflector
  drawer 'Plugins' do
    menu do
      item 'Sample Plugin' do
        event :click do
          loads :index
        end
      end
      %i(image_crop chart google_maps cacheable script scroll_to clipboard markup).sort.each do |comp|
        item titleize(comp) do
          event :click do
            loads comp
          end
        end
      end
    end
  end
end
